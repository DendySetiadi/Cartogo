<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/putihatas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/putihatas"></ImageView>
    <ImageView
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:src="@drawable/cartogologo"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="100dp"
        android:id="@+id/cartogologo"
        ></ImageView>
<TextView
    android:layout_width="150dp"
    android:layout_height="50dp"
    android:text="Masuk"
    android:textSize="30dp"
    android:layout_marginTop="220dp"
    android:layout_marginLeft="50dp"
    android:id="@+id/masuk"
    ></TextView>




    <TextView
        android:id="@+id/lupakatasandi"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginLeft="290dp"
        android:layout_marginTop="404dp"
        android:text="Lupa Kata Sandi?"
        android:textColor="@color/blue"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="11dp"></TextView>

    <ImageView
        android:id="@+id/tombolmasuk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/tombolmasuk"
        android:layout_marginTop="490dp"
        android:layout_marginLeft="130dp"/>
    <TextView
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="Masuk"
        android:textSize="20dp"
        android:layout_marginTop="499dp"
        android:layout_marginLeft="190dp"
        android:id="@+id/masuk2"
        android:textColor="@color/white"
        ></TextView>
    <TextView
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="Belum Punya Akun?"
        android:textSize="10dp"
        android:layout_marginTop="538dp"
        android:layout_marginLeft="157dp"
        android:id="@+id/belumpunyaakun"
        android:textColor="@color/abu"
        ></TextView>
    <TextView
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="Daftar"
        android:textSize="10dp"
        android:layout_marginTop="538dp"
        android:layout_marginLeft="255dp"
        android:id="@+id/daftar"
        android:textColor="@color/blue"
        ></TextView>
    <com.google.android.material.textfield.TextInputLayout

        android:layout_width="320dp"
        android:layout_height="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="275dp"
        android:hint="Masukkan Email atau Username"
        app:boxBackgroundColor="@color/abumuda"

        >

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="330dp"
            android:layout_height="50dp"
            android:id="@+id/masuk_email"/>


    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/TextInputLayout"
        android:layout_width="325dp"
        android:layout_height="99dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="347dp"
        android:hint="Masukkan Password"
        app:boxBackgroundColor="@color/abumuda"
        app:counterMaxLength="10"
        app:endIconMode="password_toggle"
        app:helperText="">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/InputPassword"
            android:layout_width="330dp"
            android:layout_height="50dp" />


    </com.google.android.material.textfield.TextInputLayout>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/garishitam"
        android:layout_marginTop="280dp"
        android:layout_marginLeft="50dp"
        android:id="@+id/garishitam"
        ></ImageView>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/garishitam"
        android:layout_marginTop="352dp"
        android:layout_marginLeft="50dp"
        android:id="@+id/garishitam2"
        ></ImageView>


</RelativeLayout>