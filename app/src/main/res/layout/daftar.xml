<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Daftar">

    <ImageView
        android:id="@+id/putihatas2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/putihatas"></ImageView>
    <ImageView
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:src="@drawable/cartogologo"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="100dp"
        android:id="@+id/cartogologo2"
        ></ImageView>
    <TextView
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="Daftar"
        android:textSize="30dp"
        android:layout_marginTop="220dp"
        android:layout_marginLeft="50dp"
        android:id="@+id/daftar"
        ></TextView>
    <com.google.android.material.textfield.TextInputLayout

        android:layout_width="320dp"
        android:layout_height="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="275dp"
        android:hint="Masukkan Email "
        app:boxBackgroundColor="@color/abumuda"

        >

    <com.google.android.material.textfield.TextInputEditText
        android:layout_width="330dp"
        android:layout_height="50dp"
        android:id="@+id/masukemail2"/>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/TextInputLayout"
        android:layout_width="322dp"
        android:layout_height="90dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="360dp"
        android:hint="Masukkan Password"
        app:boxBackgroundColor="@color/abumuda"
        app:endIconMode="password_toggle"

        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/masukpassword"
            android:layout_width="330dp"
            android:layout_height="50dp" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout

        android:layout_width="320dp"
        android:layout_height="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="445dp"
        android:hint="Konfirmasi Password"
        app:endIconMode="password_toggle"
        app:boxBackgroundColor="@color/abumuda"

        >

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="330dp"
            android:layout_height="50dp"
            android:id="@+id/konfirmasipassword"/>

    </com.google.android.material.textfield.TextInputLayout>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/garishitam"
        android:layout_marginTop="280dp"
        android:layout_marginLeft="50dp"
        android:id="@+id/garishitam"
        ></ImageView>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/garishitam"
        android:layout_marginTop="367dp"
        android:layout_marginLeft="50dp"
        android:id="@+id/garishitam2"
        ></ImageView>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/garishitam"
        android:layout_marginTop="450dp"
        android:layout_marginLeft="50dp"
        android:id="@+id/garishitam3"
        ></ImageView>
    <ImageView
        android:id="@+id/tomboldaftar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/tombolmasuk"
        android:layout_marginTop="538dp"
        android:layout_marginLeft="130dp"/>
    <TextView
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="Daftar"
        android:textSize="20dp"
        android:layout_marginTop="548dp"
        android:layout_marginLeft="190dp"
        android:id="@+id/daftar2"
        android:textColor="@color/white"
        ></TextView>
    <TextView
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="Sudah punya akun? Masuk"
        android:textSize="12dp"
        android:layout_marginTop="586dp"
        android:layout_marginLeft="143dp"
        android:id="@+id/masuk"
        android:textColor="@color/abu"
        ></TextView>
</RelativeLayout>

