            app:cardElevation="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.47"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView3">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="Ketentuan Umum"
                android:textSize="23dp"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="92dp" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView3"
            android:layout_width="422dp"
            android:layout_height="94dp"

            android:layout_marginTop="4dp"
            app:cardElevation="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardView2">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="366dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:text="* Durasi sewa adalah 24 (dua puluh empat) jam.
                                                    * Pemakaian kendaraan maksimum 250 (dua ratus lima puluh) km atau sesuai dengan kebijakan vendor.
                                                    * Penyewa bertanggung jawab terhadap biaya yang disebutkan di ketentuan biaya-biaya di bawah."
                android:textSize="12dp"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="92dp" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView4"
            android:layout_width="404dp"
            android:layout_height="52dp"
            android:layout_marginTop="16dp"

            app:cardElevation="8dp"
            app:layout_constraintEnd_toEndOf="parent"
