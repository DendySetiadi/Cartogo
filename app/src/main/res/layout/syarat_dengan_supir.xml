<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="409dp"
            android:layout_height="wrap_content"
            app:cardElevation="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/materialToolbar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="?attr/colorPrimary"
                android:backgroundTint="@color/putih"
                android:minHeight="?attr/actionBarSize"
                android:theme="?attr/actionBarTheme"
                tools:ignore="MissingConstraints" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="144dp"
                android:layout_height="35dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintTop_toBottomOf="@+id/materialToolbar"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_gravity="right|center"
                app:srcCompat="@drawable/screenshot_2023_06_03_2204552_removebg_preview" />

        </androidx.cardview.widget.CardView>


        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Syarat Sewa Mobil"
            android:textSize="23dp"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteY="92dp" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView2"
            android:layout_width="404dp"
            android:layout_height="52dp"
            android:layout_marginTop="8dp"

            app:cardElevation="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.47"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView3">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="Ketentuan Umum"
                android:textSize="23dp"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="92dp" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView3"
            android:layout_width="428dp"
            android:layout_height="385dp"

            android:layout_marginTop="4dp"
            app:cardElevation="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardView2">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="366dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:text="* Durasi sewa layanan dengan sopir adalah 12 jam atau maksimal pukul 23.59 waktu setempat dalam datu hari sewa.
                                                                                        * Saat drop-off, penyewa harus mengisi BBM dengan posisi volume mengikuti bar awal pada saat penjemputan, atau minimum senilai Rp.50.000.
                                                                                                        * Maksimal bagasi adalah 2 (dua) koper dalam satu kendaraan.
                                                                                                        * Biaya sewa termasuk: Biaya penjemputan dan jasa sopir.
                                                                                                        * Biaya sewa tidak termasuk:
                                                                                                            * Biaya tol dan parkir
                                                                                        * Biaya BBM min. IDR 50.000 atau mengikuti bar awal
                                                                                                        * Uang makan sopir IDR 75.000/hari sewa
                                                                                                                    * Tiket masuk tempat wisata dan Overtime
                                                * Biaya penggunaan di luar kota)
                                                                                                        (Jika biaya ini belum dibayarkan di aplikasi, maka akan ditagihkan oleh vendor)"
                android:textSize="12dp"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="92dp" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="368dp"
                android:layout_height="142dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="240dp"
                android:text="* Biaya Overtime:
                                                                                        * Dikenakan jika penggunaan melebihi 12 jam atau lewat dari pukul 23.59 waktu setempat per hari sewa
                                                                * IDR 50.000/jam (mobil di bawah 2000 cc)
                                                                                            * IDR 75.000/jam (mobil di atas 2000 cc)
                                                                * Akomodasi sopir (Overnight Lodging Cost/OLC)
                                                                * Dikenakan jika penggunaan kendaraan dan sopir melebihi pukul 23.59 waktu setempat.
                                                                                                        * IDR 150.000/Malam (sudah termasuk penginapan sopir)"
                android:textSize="12dp"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="92dp" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView4"
            android:layout_width="404dp"
            android:layout_height="52dp"
            android:layout_marginTop="28dp"

            app:cardElevation="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.47"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardView3">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="Penyangkalan"
                android:textSize="23dp"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="92dp" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView9"
            android:layout_width="415dp"
            android:layout_height="329dp"

            android:layout_marginTop="4dp"
            app:cardElevation="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardView4">

            <TextView
                android:id="@+id/textView9"
                android:layout_width="366dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:text="* Kendaraan hanya dapat digunakan oleh penumpang dengan nama yang tercantum di voucher pemesanan. Penumpang dilarang membawa binatang peliharaan.
                                                                * Voucher pemesanan tidak dapat ditukar, diuangkan, maupun dipindahtangankan.
                                                                                    * Kendaraan sewa tidak dapat dipergunakan untuk angkutan umum, angkutan barang, dan sejenisnya.
                                                            * Kapasitas penumpang mengikuti kapasitas kendaraan dan kebijakan masing-masing daerah sesuai aturan yang berlaku.
                                                                                * Vendor berhak untuk membatalkan penyewaan dengan alasan force majeure (bencana alam) dan berhak menolak penyewa yang dianggap tidak memenuhi syarat sebagai penyewa atau bertindak tidak wajar. Cartogo tidak bertanggung jawab atas pembatalan dan penolakan tersebut.
                                                                                    * Penyewa wajib mengikuti dan menaati kebijakan pemerintah mengenai peraturan perjalanan transportasi darat.
                                                                                * Cartogo tidak bertanggung jawab terhadap kecelakaan, kerugian, korban, dan pengobatan yang timbul dari kecelakaan tersebut. Lingkup tanggung jawab Cartogo hanya sampai pada penerimaan informasi dan penyampaian kepada vendor perihal ganti rugi kepada penyewa (jika ada)."
                android:textSize="12dp"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="92dp" />
        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>